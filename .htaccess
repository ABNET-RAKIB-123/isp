RewriteEngine On
RewriteBase /

# Disable directory listing
Options -Indexes

# Redirect root URL to admin/login
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /admin/login.php [L,R=302]

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# Redirect existing directories to admin/login.php
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ /admin/login.php [L]

# Redirect all unknown URLs to admin/login.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /admin/login.php [L]
